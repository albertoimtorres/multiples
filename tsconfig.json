{
    "compilerOptions": {
        "module": "Commonjs",
        "esModuleInterop": true,
        "target": "ES6",
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        },
        "lib": [
            "ES6",
            "DOM"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}